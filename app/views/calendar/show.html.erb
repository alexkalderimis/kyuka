<%= month_calendar start_date: @day_0,
                   td: ->(start_date, current_date) { {class: cell_class(current_date) } },
                   previous_link: ->(param, date_range) { link_to raw("&laquo;"), {:year => date_range.first.year, :month => date_range.first.month } },
                   next_link: ->(param, date_range) { link_to raw("&raquo;"), {:year => date_range.last.year, :month => date_range.last.month } } do |date| %>
  <%= date %>
<% end %>
